<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayoutBottomSheet"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congrats \n Your Order Placed"
        android:maxLines="2"
        android:gravity="center"
        android:fontFamily="@font/yeonsung_regular"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_marginTop="@dimen/definite_dimen_100"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_success"
        android:gravity="center"
        android:layout_marginTop="@dimen/definite_dimen_40"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Home"
        android:background="@drawable/rounded_green_button"
        android:layout_marginStart="@dimen/definite_dimen_50"
        android:layout_marginEnd="@dimen/definite_dimen_50"
        android:layout_marginTop="@dimen/definite_dimen_50"
        android:textColor="@color/white"
        android:fontFamily="@font/yeonsung_regular"
        android:textSize="@dimen/text_size_normal"/>


</LinearLayout>