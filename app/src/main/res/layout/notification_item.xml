<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/definite_dimen_38"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_white_button"
    android:layout_marginTop="@dimen/definite_dimen_10"
    android:layout_marginStart="@dimen/definite_dimen_6"
    android:layout_marginEnd="@dimen/definite_dimen_6">

        <ImageView
            android:id="@+id/statusImg"
            android:layout_width="@dimen/definite_dimen_30"
            android:layout_height="@dimen/definite_dimen_30"
            android:src="@drawable/icon_sad"
            android:layout_marginStart="@dimen/definite_dimen_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Your order has been Canceled Successfully"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/statusImg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/definite_dimen_6"
            android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>